<Window x:Class="KalenWilliamsProject6a.Editor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KalenWilliamsProject6a"
        mc:Ignorable="d"
        Title="Editor" Height="319.048" Width="365.714">
    <Grid>
        <Menu x:Name="menu" HorizontalAlignment="Left" Height="21" VerticalAlignment="Top" Width="358">
            <Button x:Name="btnSave" Content="Save" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Click="btnSave_Click"/>
            <Button x:Name="btnLoad" Content="Load" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Click="btnLoad_Click"/>
            <Button x:Name="btnExit" Content="Exit" Width="75" Click="btnExit_Click"/>
        </Menu>
        <DockPanel x:Name="dock" HorizontalAlignment="Stretch" Height="Auto" LastChildFill="False" Margin="0,21,0,0" VerticalAlignment="Stretch" Width="Auto">
            <Canvas Height="0" Width="0"/>
            <TextBox x:Name="txtEditor" Height="267" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="358"/>
            
        </DockPanel>

    </Grid>
</Window>
